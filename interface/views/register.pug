extends layout

block content
    .w3-container.w3-card
      h2 Register User

      form(action='/auth/register', method='post')
        .w3-row.w3-section
          .w3-col.m2.w3-container
            label.w3-text-grey Name:
          .w3-col.m10.w3-container
            input.w3-input(type='text', name='nome', placeholder='Insira o seu nome', required)

        .w3-row.w3-section
          .w3-col.m2.w3-container
            label.w3-text-grey Email:
          .w3-col.m10.w3-container
            input.w3-input(type='email', name='email', placeholder='Insira o seu email', required)

        .w3-row.w3-section
          .w3-col.m2.w3-container
            label.w3-text-grey Password:
          .w3-col.m10.w3-container
            input.w3-input(type='password', name='password', placeholder='Insira a sua password', required)

        .w3-row.w3-section
          .w3-col.m2.w3-container
            label.w3-text-grey Role:
          .w3-col.m10.w3-container
            select.w3-select(name='nivel', required)
              option(value='consumidor') Consumidor
              option(value='administrador') Administrador

        .w3-row.w3-section
          .w3-col.m2.w3-container
          .w3-col.m10.w3-container
            button.w3-button.w3-blue(type='submit') Register

      p.w3-margin-top Already have an account? 
        a(href='/auth/login') Login here

